# ═══════════════════════════════════════════════
# VulnInventory — Configuration
# ═══════════════════════════════════════════════
# Copy to .env and update values:  cp .env.example .env

# ─── Security (REQUIRED — app won't start without this) ───
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_STRING_OF_AT_LEAST_32_CHARS
# Generate: python -c "import secrets; print(secrets.token_urlsafe(48))"

# ─── Database ───
DATABASE_URL=postgresql://vulninventory:vulninventory@db:5432/vulninventory

# ─── Redis ───
REDIS_URL=redis://redis:6379/0

# ─── API Keys (worker <-> API) ───
API_KEY=CHANGE_ME_WORKER_API_KEY
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"

# ─── CORS ───
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ─── Cookies ───
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=

# ─── Auth ───
REGISTRATION_ENABLED=true
LOGIN_MAX_ATTEMPTS=5
PASSWORD_EXPIRY_DAYS=90

# ─── Rate Limiting ───
RATE_LIMIT_PER_MIN=120

# ─── Development ───
DEV_MODE=true
